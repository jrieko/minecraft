[Unit]
Description=Spigot Minecraft server
#After=network.target auditd.service syslog.target

[Service]
Type=simple
ExecStart=/usr/share/craftbukkit/server
KillMode=process
Restart=no
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=minecraft
User=craftbukkit
Group=craftbukkit-adm

[Install]
#WantedBy=multi-user.target
Alias=minecraft.service
